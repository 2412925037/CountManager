<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color"
    android:orientation="vertical"
    >

    <include layout="@layout/title_subview" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/task_info_type_title"
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/task_info_type"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:id="@+id/task_info_type_view"
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/task_info_type_title"
                        android:singleLine="true"
                        android:textSize="@dimen/font_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/task_info_type_view"
                        android:src="@drawable/icon_arrow_task_info"/>

                    <TextView
                        android:id="@+id/task_info_type_sub_view"
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@color/theme_background_color"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:maxWidth="150dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="@dimen/font_17" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/task_info_num"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:id="@+id/task_info_no_view"
                        style="@style/text_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textSize="@dimen/font_17" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/task_info_name"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:id="@+id/task_info_name_view"
                        style="@style/text_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textSize="@dimen/font_17" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/task_info_information"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:id="@+id/task_info_desc_view"
                        style="@style/text_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textSize="@dimen/font_17" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/task_info_person"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:id="@+id/task_info_person_view"
                        style="@style/text_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textSize="@dimen/font_17" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    style="@style/text_style"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:text="@string/task_info_site_info"
                    android:textSize="@dimen/font_17" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/task_info_site_name_view"
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_17"
                        android:layout_marginTop="6dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/task_info_site_lat_view"
                            style="@style/text_style"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/font_17" />
                        <TextView
                            android:id="@+id/task_info_site_lon_view"
                            style="@style/text_style"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/font_17"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/task_info_site_address_view"
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_17" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/task_info_complete_time"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:id="@+id/task_info_complete_time_view"
                        style="@style/text_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textSize="@dimen/font_17" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/task_info_emergency_degree"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:id="@+id/task_info_emergency_view"
                        style="@style/text_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textSize="@dimen/font_17" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/task_info_multiple_feedback"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:id="@+id/task_info_feedback_view"
                        style="@style/text_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textSize="@dimen/font_17" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>
                <RelativeLayout
                    android:id="@+id/task_info_voice_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" 
                    android:layout_marginBottom="10dp">

                    <TextView
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/task_info_voice_message"
                        android:textSize="@dimen/font_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_arrow_auto_orperation" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>