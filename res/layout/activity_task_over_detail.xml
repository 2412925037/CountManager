<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color"
    android:orientation="vertical" >

    <include layout="@layout/title_subview"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/detail_task_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                style="@style/text_style"
                android:textSize="@dimen/font_17"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/detail_task_title"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/app_arrow"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_background_color"/>
        <RelativeLayout
            android:id="@+id/detail_task_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                style="@style/text_style"
                android:textSize="@dimen/font_17"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/detail_info_title"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/app_arrow"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_background_color"/>
        <RelativeLayout
            android:id="@+id/detail_evaluate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                style="@style/text_style"
                android:textSize="@dimen/font_17"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/detail_evaluate_title"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/app_arrow"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_background_color"/>
        <RelativeLayout
            android:id="@+id/detail_voice_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                style="@style/text_style"
                android:textSize="@dimen/font_17"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/detail_voice_title"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/app_arrow"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <TextView
            style="@style/text_style"
            android:textSize="@dimen/font_17"
            android:layout_margin="10dp"
            android:text="@string/detail_progress_title"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_background_color"/>
        <ListView
            android:id="@+id/detail_progress_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ListViewStyle"/>
    </LinearLayout>
</LinearLayout>