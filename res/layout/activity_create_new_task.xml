<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color"
    android:orientation="vertical" >

    <include layout="@layout/title_subview" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:id="@+id/sale_chance_info_chance_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingRight="5dp"
                        android:text="@string/task_info_type"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:id="@+id/sale_chance_info_chance_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_toRightOf="@id/sale_chance_info_chance_name_title"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/icon_arrow_task_info"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:text="新建基站"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:id="@+id/center_line"
                        android:layout_width="0.1dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/theme_background_color" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/center_line"
                        android:background="@color/theme_background_color"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="@string/create_new_task_hint"
                        android:singleLine="true"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/theme_background_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:id="@+id/task_num_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/task_info_num"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:id="@+id/task_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="DHHLBJO"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/theme_background_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:id="@+id/task_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/task_info_name"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <EditText
                        android:id="@+id/task_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/task_name_title"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical|right"
                        android:hint="@string/auto_operation_hint_remark"
                        android:singleLine="true"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/theme_background_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:id="@+id/task_info_information_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/task_info_information"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <EditText
                        android:id="@+id/task_info_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/task_info_information_title"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical|right"
                        android:hint="@string/auto_operation_hint_remark"
                        android:singleLine="true"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/theme_background_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:id="@+id/task_info_person_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/task_info_person"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        android:id="@+id/task_info_person"
                        style="@style/text_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/app_arrow"
                        android:text="@string/app_please_select"
                        android:textSize="@dimen/font_16" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/theme_background_color" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:id="@+id/site_info_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/task_info_site_info"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/site_info_title" >

                        <ImageView
                            android:id="@+id/img_next_site"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/app_arrow" />

                        <TextView
                            android:id="@+id/sale_chance_info_remark_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="25dp"
                            android:layout_marginTop="25dp"
                            android:layout_toLeftOf="@id/img_next_site"
                            android:ellipsize="end"
                            android:gravity="center_vertical|right"
                            android:maxLines="2"
                            android:paddingRight="5dp"
                            android:text="信息站址站址信息信息站址站址信息信息站址站址信息信息站址站址信息信息站址站址信息信息站址站址信息"
                            android:textColor="@color/app_text_color"
                            android:textSize="@dimen/font_17" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/theme_background_color" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:id="@+id/task_info_complete_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/task_info_complete_time"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/app_arrow" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/theme_background_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/task_info_emergency_degree"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/app_arrow" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/theme_background_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:id="@+id/task_info_multiple_feedback_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/task_info_multiple_feedback"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <TextView
                        style="@style/text_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/app_arrow"
                        android:text="@string/app_please_select"
                        android:textSize="@dimen/font_16" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/theme_background_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <TextView
                        android:id="@+id/task_info_voice_message_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="25dp"
                        android:text="@string/task_info_voice_message"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/app_arrow" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/theme_background_color" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/app_temporary_storage"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/btn_save"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/create_new_task_assignment"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>