<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/title_subview"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/work_search_title_view"
                    style="@style/text_style"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/task_info_name"
                    android:textSize="@dimen/font_17"/>
                <EditText
                    android:id="@+id/work_search_name_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/work_search_title_view"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"
                    android:hint="@string/mission_hint"
                    android:gravity="right"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_background_color"/>
            <RelativeLayout
                android:id="@+id/work_search_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    style="@style/text_style"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/task_info_type"
                    android:textSize="@dimen/font_17"/>

                <TextView
                    android:id="@+id/work_search_type_view"
                    style="@style/text_style"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/work_search_type_arrow"
                    android:textSize="@dimen/font_17"/>

                <ImageView
                    android:id="@+id/work_search_type_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/app_arrow"/>

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/work_search_creater_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        style="@style/text_style"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/work_search_creater_name"
                        android:textSize="@dimen/font_17"/>

                    <TextView
                        style="@style/text_style"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/work_search_creater_arrow"
                        android:textSize="@dimen/font_17"/>

                    <ImageView
                        android:id="@+id/work_search_creater_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/app_arrow"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_background_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    style="@style/text_style"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/work_search_creater_time"
                    android:textSize="@dimen/font_17"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/work_search_time_from"
                        style="@style/text_style"
                        android:hint="@string/mission_operate_time_from_hint"
                        android:textSize="@dimen/font_17"/>
                    <TextView
                        style="@style/text_style"
                        android:textSize="@dimen/font_17"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/kq_search_time_sqlit"/>
                    <TextView
                        android:id="@+id/work_search_time_to"
                        style="@style/text_style"
                        android:hint="@string/mission_operate_time_to_hint"
                        android:textSize="@dimen/font_17"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_background_color"/>
            <Button
                android:id="@+id/work_search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="130dp"
                style="@style/commit_button_style"
                android:text="@string/kq_search_btn"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>