<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/title_subview"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout 
                android:id="@+id/kq_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/kq_search_county_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/kq_search_county"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17"/>

                    <TextView
                        android:id="@+id/kq_seach_county_view"
                        style="@style/text_style"
                        android:layout_toLeftOf="@+id/kq_search_county_arrow"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_17"/>
            
                    <ImageView
                        android:id="@+id/kq_search_county_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/app_arrow"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>
                <RelativeLayout
                    android:id="@+id/kq_search_person_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/kq_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/kq_search_manager"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17"/>
                
                    <TextView
                        android:id="@+id/kq_seach_person_view"
                        style="@style/text_style"
                        android:layout_toLeftOf="@+id/kq_search_person_arrow"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_17"/>
                
                    <ImageView
                        android:id="@+id/kq_search_person_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/app_arrow"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    style="@style/text_style"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/kq_search_time"
                    android:textSize="@dimen/font_17"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/kq_search_time_from"
                        style="@style/text_style"
						android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17"
                        android:hint="开始时间"
                        />
                    <TextView
                        style="@style/text_style"
                        android:textSize="@dimen/font_17"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/kq_search_time_sqlit"/>
                    <TextView
                        android:id="@+id/kq_search_time_to"
                        style="@style/text_style"
                        android:textSize="@dimen/font_17"
                        android:hint="结束时间"
                        />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_background_color"/>
            

            <Button
                android:id="@+id/kq_search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="20dp"
                android:padding="12dp"
                style="@style/commit_button_style"
                android:text="@string/kq_search_btn"/>
            
        </LinearLayout>
    </ScrollView>
</LinearLayout>