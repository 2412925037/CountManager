<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/title_subview"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/mission_title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/kq_search_task"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/font_17"/>
                <EditText
                    android:id="@+id/mission_task_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mission_title_view"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:hint="@string/mission_hint"
                    android:gravity="right"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_background_color"/>
            <LinearLayout 
                android:id="@+id/mission_search_role_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mission_search_county_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/kq_search_county"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17"/>

                    <TextView
                        android:id="@+id/mission_search_county_view"
                        style="@style/text_style"
                        android:gravity="right"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/font_17"
                        android:layout_toLeftOf="@+id/mission_search_county_arrow"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:id="@+id/mission_search_county_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/app_arrow"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>
                <RelativeLayout
                    android:id="@+id/mission_search_person_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/kq_search_manager"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17"/>

                    <TextView
                        android:id="@+id/mission_search_person_view"
                        style="@style/text_style"
                        android:gravity="right"
                        android:layout_toLeftOf="@+id/mission_search_person_arrow"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/font_17"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:id="@+id/mission_search_person_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/app_arrow"/>
                </RelativeLayout>
                <View
                    android:id="@+id/view_mission_manger"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_background_color"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/mission_search_task_report_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/mission_upload_type_title"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/font_17"/>

                <TextView
                    android:id="@+id/mission_search_task_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_17"
                    android:gravity="right"
                    android:textColor="@color/app_text_color"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/mission_upload_type_arrow"/>
                <ImageView
                    android:id="@+id/mission_upload_type_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/app_arrow"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_background_color"/>
            
            <RelativeLayout
                android:id="@+id/mission_search_operate_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/mission_operate_time"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/font_17"/>
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/mission_search_operate_time_from"
                        style="@style/text_style"
						android:textColor="@color/app_text_color"
                        android:textSize="@dimen/font_17"
                        android:hint="开始时间"/>
                    <TextView
                        style="@style/text_style"
                        android:textSize="@dimen/font_17"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/kq_search_time_sqlit"/>
                    <TextView
                        android:id="@+id/mission_search_operate_time_to"
                        style="@style/text_style"
                        android:textSize="@dimen/font_17"
                        android:hint="结束时间"/>
                </LinearLayout>

                
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_background_color"/>

            <RelativeLayout
                android:id="@+id/mission_search_task_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/mission_type_title"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/font_17"/>

                <TextView
                    android:id="@+id/mission_search_task_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/app_text_color"
                    android:layout_toLeftOf="@+id/mission_type_arrow"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font_17"/>
                <ImageView
                    android:id="@+id/mission_type_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/app_arrow"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_background_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@+id/mission_evaluate_title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/mission_evaluate_title"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/font_17"/>

                <RatingBar
                    android:id="@+id/mission_evaluate_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:isIndicator="false"
                    android:stepSize="1"
                    android:rating="0"
                    style="@style/missionRatingBarStyle"
                    android:numStars="5"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_background_color"/>
            
            <Button
                android:id="@+id/task_search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="20dp"
                android:padding="12dp"
                style="@style/commit_button_style"
                android:text="@string/kq_search_btn"/>
            
        </LinearLayout>
    </ScrollView>
</LinearLayout>