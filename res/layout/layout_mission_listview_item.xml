<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layout_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/item_mission_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_auto_sign" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_mission_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_mission_name"
                style="@style/text_style"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="代办名称名称16字号显示效果"
                android:textSize="@dimen/font_18" />

            <TextView
                android:id="@+id/item_mission_content"
                style="@style/text_style"
                android:singleLine="true"
                android:text="新建基站：站址勘察"
                android:textSize="@dimen/font_16"  />

            <TextView
                android:id="@+id/item_mission_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="待签收"
                android:textSize="@dimen/font_16" 
                android:textColor="@color/app_title_background" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/item_mission_user_name"
                    style="@style/text_style"
                    android:singleLine="true"
                    android:text="张建"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_mission_time"
                    style="@style/text_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:text="2015年10月20日 13:20:20"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>